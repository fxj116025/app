.pensive_home {
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: 110rpx;
}
.pensive_home .flex_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.pensive_home .comment {
  position: relative;
  width: 100%;
  background-color: #fff;
  border-radius: 20px 20px 0 0;
  top: -25rpx;
}
.pensive_home .comment .worship_num {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 30rpx 0 20rpx 0;
}
.pensive_home .comment .worship_num .worship_item {
  width: calc(100% / 4);
  text-align: center;
}
.pensive_home .comment .worship_num .worship_item .worship_item_num {
  font-size: 36rpx;
  color: #ff9e13;
}
.pensive_home .comment .worship_num .worship_item .worship_item_title {
  margin-top: 5rpx;
  font-size: 26rpx;
  color: #333;
}
.pensive_home .comment .worship_list .worship_item .item {
  box-sizing: border-box;
  padding: 25rpx;
}
.pensive_home .comment .worship_list .worship_item .item .item_top .item_top_left {
  margin-right: 40rpx;
}
.pensive_home .comment .worship_list .worship_item .item .item_top .item_top_left image {
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
}
.pensive_home .comment .worship_list .worship_item .item .item_top .item_top_right {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.pensive_home .comment .worship_list .worship_item .item .item_top .item_top_right .item_right_top {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
}
.pensive_home .comment .worship_list .worship_item .item .item_top .item_top_right .item_right_bottom .item_right_bottom_item {
  margin-right: 25rpx;
}
.pensive_home .comment .worship_list .worship_item .item .item_top .item_top_right .item_right_bottom .item_right_bottom_item .item_right_bottom_title {
  color: #333333;
  font-size: 26rpx;
}
.pensive_home .comment .worship_list .worship_item .item .item_top .item_top_right .item_right_bottom .item_right_bottom_item image {
  display: block;
  margin: 0 auto;
  width: 40rpx;
  height: 40rpx;
}
.pensive_home .comment .worship_list .worship_item .item .item_center {
  margin-top: 20rpx;
  color: #333;
  font-size: 30rpx;
}
.pensive_home .comment .worship_list .worship_item .item .item_bottom {
  border-top: 1px solid #f5f5f5;
  margin-top: 20rpx;
  padding-top: 20rpx;
  color: #666666;
  font-size: 26rpx;
}
.pensive_home .send_grief {
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  z-index: 1;
  position: fixed;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  bottom: 0;
  left: 0;
  border-top: 1px solid #F5F5F5;
}
.pensive_home .send_grief .btn {
  text-align: center;
  color: #fff;
  background-color: #FF9E13;
  width: 85%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 25px;
}

