.personalCenter .personalCenter_info {
  height: 400rpx;
  background-color: #3D3E4E;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  position: relative;
}
.personalCenter .personalCenter_info .person_portrait {
  box-sizing: border-box;
  padding-top: 70rpx;
}
.personalCenter .personalCenter_info .person_portrait image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto 25rpx auto;
}
.personalCenter .personalCenter_info .person_portrait .person_name {
  font-weight: bold;
  font-size: 40rpx;
  color: #fff;
}
.personalCenter .personalCenter_info .sign_in {
  position: absolute;
  right: 30rpx;
  top: 50rpx;
}
.personalCenter .personalCenter_info .sign_in .sign_in_btn {
  width: 170rpx;
  height: 60rpx;
  border-radius: 20px;
  background-color: #54567E;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  color: #fff;
  font-size: 25rpx;
  white-space: nowrap;
}
.personalCenter .personalCenter_info .sign_in .sign_in_btn image {
  width: 32rpx;
  height: 32rpx;
}
.personalCenter .personalCenter_info .sign_in .sign_in_num {
  text-align: center;
  color: #fff;
  margin-top: 10rpx;
  font-size: 24rpx;
}
.personalCenter .segmentation_center {
  width: 100%;
  height: 30rpx;
  background-color: #F5F5F5;
}
.personalCenter .go_look {
  padding: 10rpx 25rpx;
  color: #fff;
  border-radius: 20px;
  background-color: #3D3E4E;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
