.memorial_hall_home {
  height: 100vh;
  width: 100%;
  background-color: #fff;
}
.memorial_hall_home .memorial_header_input {
  width: 90%;
  padding: 20rpx 0 10rpx 0;
  position: relative;
}
.memorial_hall_home .memorial_header_input input {
  width: 100%;
  height: 70rpx;
  background-color: #F5F5F5;
  border-radius: 20px;
  box-sizing: border-box;
  padding: 0 120rpx 0 60rpx;
}
.memorial_hall_home .memorial_header_input .input_icon,
.memorial_hall_home .memorial_header_input .input_btn {
  height: 70rpx;
  top: 54%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  position: absolute;
}
.memorial_hall_home .memorial_header_input .input_icon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  left: 10rpx;
}
.memorial_hall_home .memorial_header_input .input_btn {
  right: 0;
  background-color: #3D3E4E;
  border-radius: 0 20px 20px 0;
  color: #fff;
  width: 150rpx;
  text-align: center;
  line-height: 70rpx;
  color: 30rpx;
}
.memorial_hall_home .swiper_box {
  width: 100%;
  height: 340rpx;
}
.memorial_hall_home .swiper_box .swiper_item {
  background-color: #007AFF;
}
.memorial_hall_home .list .list_title {
  color: #333333;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
  border-bottom: 1px solid #F5F5F5;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.memorial_hall_home .list .list_title .list_title_text {
  font-size: 35rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

