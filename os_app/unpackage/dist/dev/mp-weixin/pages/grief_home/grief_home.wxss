.grief_home {
  min-height: 100vh;
  background-color: #F5F5F5;
}
.grief_home .grief_home_title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
}
.grief_home .grief_home_title .grief_home_title_text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
}
.grief_home .grief_home_title .grief_home_title_music {
  margin: 0 40rpx;
}
.grief_home .grief_home_title .grief_home_title_music, .grief_home .grief_home_title .grief_home_title_share {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
}
.grief_home .grief_home_title .grief_home_title_music image, .grief_home .grief_home_title .grief_home_title_share image {
  width: 100%;
  height: 100%;
}
.grief_home .grief_home_content {
  box-sizing: border-box;
  padding: 0 20rpx 0rpx 20rpx;
}
.grief_home .num_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx;
  padding-bottom: 120rpx;
  padding-top: 0;
}
.grief_home .num_box .icon1 {
  position: relative;
}
.grief_home .num_box .icon1 image {
  width: 345rpx;
  height: 195rpx;
}
.grief_home .num_box .icon1 .num_info {
  position: absolute;
  top: 50%;
  left: 20rpx;
