  font-size: 36rpx;
  font-weight: bold;
}
.grief_home .num_box .icon1 .num_info .num {
  margin-top: 5rpx;
  font-size: 26rpx;
}
.grief_home .grief_home_footer {
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  height: 120rpx;
  z-index: 1;
